    <script>

      let div = document.createElement("div");
      div.id = "paragraph";
      div.className = "alert"
      div.innerHTML = "<p>Congratulations! You have successfully created a div element.</p>";
      document.body.append(div);

      document.getElementById("heading").innerHTML = "&#128512;";

      document.querySelector("header p").innerHTML = "<strong> Good job!</strong>";

    </script>
</body>

